set -eo pipefail

delete() {
  if command -v recycle &>/dev/null; then
    recycle -fv "$1"
  else
    rm -fv "$1"
  fi
}

if [[ ! -d muxed ]]; then
  echo 'No "muxed" directory from mkv-batch here' >&2
  exit 1
fi

mkv-ls muxed

echo
read -rp 'Accept changes? [Yn] ' yn
if [[ $yn == 'n' ]]; then
  exit
fi
echo

for f in muxed/*.mkv; do
  delete "$(basename "$f" .mkv)"*.mkv # May have had a crc
  mv -v "$f" .
done

rmdir -v muxed
