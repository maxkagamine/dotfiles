# https://www.nano-editor.org/dist/latest/nanorc.5.html

set autoindent
set boldtext
set linenumbers
set minibar # v5.5 (Jan 2021)
# set mouse
set nohelp
set numbercolor brightblack,normal
set smarthome
set statuscolor brightblack,normal
set tabsize 2
set tabstospaces
set titlecolor brightblack,normal

bind M-F formatter main
bind M-B linter main

include "/usr/share/nano/*.nanorc"

extendsyntax sh formatter shfmt --write --indent 2 --case-indent
