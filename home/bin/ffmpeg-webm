#!/usr/bin/env bash
set -e

if [[ $# == 0 ]]; then
	echo 'Usage: ffmpeg-webm <input> [<output>]' >&2
	exit 1
fi

input=$1
output=$2

if [[ -z $output ]]; then
	output="${input%.*}.webm"
fi

set -o xtrace

ffmpeg.exe -hide_banner -i "$(wslpath -w "$input")" -c:v libvpx -crf 10 -b:v 1M -c:a libvorbis "$(wslpath -w "$output")"
